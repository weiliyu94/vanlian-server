<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/onedialog_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ez10dp" />

    <TextView
        android:id="@+id/onedialog_textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ez20dp"
        android:layout_marginTop="@dimen/ez20dp"
        android:gravity="center_horizontal" />

    <View style="@style/view_vertical_grayline_height1_left0_right0" />

    <TextView
        android:id="@+id/onedialog_textview_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ez10dp"
        android:textSize="16sp" />

</LinearLayout>